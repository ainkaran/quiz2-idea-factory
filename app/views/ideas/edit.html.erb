<h1>Edit Idea</h1>

<% unless @idea.errors.empty? %>
<div>
  <%= @idea.errors.full_messages.join(', ') %>
</div>
<% end %>

<%= form_for @idea do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <%= f.submit %>
<% end %>
